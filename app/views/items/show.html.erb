<table class="w3-table w3-striped w3-bordered">
	<tr>
		<th>Image</th>
		<th>Name</th>
		<th>Price</th>
		<th>Edit</th>
	</tr>
	
	<tr>
	  <td><%= image_tag @item.image, :style => "width:20%" %></td>
	  <td><%= @item.name %></td>
	  <td><%= @item.price %></td>
	  <td><%= link_to "Edit Item", edit_item_path(@item) %></td>
	</tr>
	
</table>
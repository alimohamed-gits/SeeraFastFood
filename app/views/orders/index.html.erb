<% if current_user.admin? %>
<h1>All orders</h1>
<% else %>
<h1>All orders for <%= current_user.first_name%> <%= current_user.last_name%></h1>
<% end %>


<table class="w3-table w3-striped w3-bordered">

 <tr>
      <th>Order ID</th>
      <th>Order Total</th>
      <th>Status</th>
      <th>Updated Time</th>
      <th>Created Time</th>
      <th>View</th>
      <% if current_user && current_user.admin? %>
       <th>Update</th>
      <% end %>
      
    </tr>
  <% @orders.each do |order| %>   
    
      <tr>
        <td><%= order.id %></td>
        <td><%= order.total %></td>
        <td><%= order.status %></td>
        <td><%= order.updated_at.to_s %></td>
        <td><%= order.created_at.to_s %></td>
        <td><%= link_to "View", edit_order_path(order.id) %></td>
        <% if current_user && current_user.admin? %>
          <td><%= link_to "Update", order_path(order.id) %></td>
        <% end %>
      </tr>
    
  <% end %>
</table>
<br>
<%= link_to "Back to Menu", categories_path , class: "w3-button w3-red"%>

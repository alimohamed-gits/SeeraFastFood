<h1> Listing of all users </h1><hr><hr>
<% @users.each do |user| %>
  <h2>Name: <%= user.first_name %>&nbsp <%= user.last_name %></h2>
  <h5><%= user.email %></h5>
  <h5>Phone Number: <%= user.phone %></h5>
  <h5>Address: <%= user.address %></h5>
  <h5> Total purchases: <%= user.total_spent %> </h5>
  <%= link_to 'View All Orders For This User', orders_path(user) %></br><hr>
<% end %>
